.content
  display flex
  flex-flow column nowrap
  justify-content center
  align-items center
  background-color #d9d9d9
  min-height calc(100vh - 213px)
  width 100%

.row
  display flex
  flex-flow row wrap

.column
  display flex
  flex-flow column wrap

.footer
  width 100%
  justify-content center
  align-items center
  padding-top 64px
  padding-bottom 64px
  background-color #eee

mat-card-actions
  display flex
  flex-flow row nowrap
  justify-content space-between
  align-items center

button.mat-primary
  background-color #45F274 !important
